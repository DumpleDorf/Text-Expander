{
  "manifest_version": 3,
  "name": "Tesla Support Tool",
  "version": "2.4.6",
  "description": "Support Tool with text expander, tyre quoting and more.",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Tesla Support Tool"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["TextExpander/textExpander.js"],
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["https://customerconnect.tesla.com/*"],
      "js": ["TextExpander/textExpander.js"],
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["https://customerconnect.tesla.com/*"],
      "js": ["TeamsDropdownFilter/teamsFilter.js"],
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["https://serviceapp.tesla.com/*"],
      "js": ["SCA_AutoMessager/autoMessager.js"],
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["https://customerconnect.tesla.com/dashboard/roadsidedashboard*"],
      "js": ["RoadsideDashboardFilter/dashboardfilter.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://customerconnect.tesla.com/customerinteraction*"],
      "js": ["TCCRoadsideDispatchAutomation/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "TyreQuoteGenerator/tyre_prices.csv",
        "SCA_AutoMessager/scConfig.csv",
        "SCA_AutoMessager/temp.js",
        "EasterEgg/lol.png",
        "HEICConverter/heic-to.js",
        "HEICConverter/pdf-lib.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}